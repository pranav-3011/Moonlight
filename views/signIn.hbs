<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Moonlight.us</title>
  <!-- Favicons -->
  <link href="assets/img/favicon.ico" rel="icon">

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">
  <link
    href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&family=Scheherazade+New&family=Source+Sans+Pro:wght@200&display=swap"
    rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&family=Source+Sans+Pro:wght@200&display=swap"
    rel="stylesheet">
  <!-- Vendor CSS Files -->
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Template Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="assets/css/bts.min.css">
  <script src="assets/js/jquery.min.js"></script>
  <style>
    #btn {
      border-radius: 6px;
      background-color: #00ADB5;
      color: white;
      border: 6px ridge #00ADB5;
    }

    #btn:hover {
      box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
    }

    #signUp_form {
      margin-top: 100px;
      padding: 25px;
      border-radius: 15%;
      border-left: 10px ridge #222831;
      border-right: 10px ridge #222831;
    }

    #signup_alert {
      margin-top: 80px;
    }
  </style>
  <script>
    function close_alert(){
      const alert = document.getElementById("signup_alert");
      alert.remove();
    }


  </script>
</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>


  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center justify-content-between">

      <div class="logo">

        <h2><span>ðŸŒ™</span> Moonlight.us</h2>
        <br>
        <center>
          <h3>You are not alone !</h3>
        </center>
      </div>

      <!-- .navbar -->
    </div>
  </header>

  {{#if alert}}
  <div id="signup_alert" class="alert alert-warning alert-dismissible show" role="alert">
    <strong>Hello User!</strong> Thanks for registering with us.
    <button type="button" class="close" onclick="close_alert()" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}

{{#if unsaved}}
  <div id="signup_alert" class="alert alert-warning alert-dismissible show" role="alert">
    <strong>Hello User!</strong> The user is already registered.
    <button type="button" class="close" onclick="close_alert()" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}
  {{#if valid}}
  <div id="signup_alert" class="alert alert-warning alert-dismissible show" role="alert">
    <strong>Hello User!</strong> Please check the credentials.
    <button type="button" class="close" onclick="close_alert()" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}
  <div style="height: 695px;" class="d-flex justify-content-center align-items-center">

    <form id="signUp_form" style="height: 535px;" class="text-dark" action="/signup" method="post">
      <div class="d-inline-flex">
        <div class="mb-3 mx-2">
          <label for="firstName" class="form-label">First Name</label>
          <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First name"
            aria-label="First name" />
        </div>
        <div class="mb-3 mx-2">
          <label for="lastName" class="form-label">Last Name</label>
          <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last name"
            aria-label="Last name" />
        </div>
      </div>
      <div class="mb-3 mx-2">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" name="email" id="email" />
        <div id="emailHelp" class="form-text">We'll never share your email
          with anyone else.</div>
      </div>
      <div class="mb-3 mx-2">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password" />
      </div>
      <div class="mb-3 mx-2">
        <label for="tel" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" name="tel" id="tel" />
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3 mx-2 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" id="btn" class="mx-2 w-50">Submit</button>
      </div>
      <p class="text-center m-2 p-2">Already have an account? <a class="text-primary " href="/login">Log In</a> </p>
    </form>
  </div>







</body>

</html>